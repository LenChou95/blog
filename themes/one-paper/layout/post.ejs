<div class="post-main">

    <% if (is_post()) { %>
    
        <div class="post-main-title">
            <%= page.title %>
        </div>
        <div class="post-meta">
            <%- date(page.date, "YYYY-MM-DD") %>
        </div>




        <div class="tags">
            <% page.categories.forEach(function(category) { %>
                <a href="<%= url_for(category.path) %>"><%= category.name %></a>
            <% }); %>
        </div>




        <div class="post-md">
            <%- page.content %>
        </div>

    <% } else { %>

        <div class="post-md">
            <%- page.content %>
        </div>

    <% } %>

</div>







